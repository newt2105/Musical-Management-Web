<%- include('../includes/head.ejs') %>
<div class="container mt-4">
  <div class="row">
    <% if (role === 'admin') { %>
      <div class="col-md-6">
        <a class="btn btn-primary btn-lg btn-block mb-2" href="admin/create" role="button">Add an Instrument </a>
      </div>

      <div class="col-md-6">
        <a class="btn btn-primary btn-lg btn-block mb-2" href="admin/create-performance" role="button">Add a Performance </a>
      </div>

      <div class="col-md-6">
        <a class="btn btn-primary btn-lg btn-block mb-2" href="admin/pending-instruments" role="button">Pending instrument </a>
      </div>
    <% } else if (role === 'user') { %>
      <div class="col-md-6 offset-md-3">
        <a class="btn btn-primary btn-lg btn-block mb-2" href="user/create" role="button">Add an Instrument</a>
      </div>
    <% } %>
  </div>
</div>
