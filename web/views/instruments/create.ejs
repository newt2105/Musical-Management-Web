<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
<div class="mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3><% if (editing) { %>Edit Instrument<% } else { %>Add Instrument<% } %></h3>

            <form class="product-form" action="/admin/<% if (editing) { %>edit<% } else { %>create<% } %>" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<% if (editing) { %><%= instrument.title %><% } %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3"> <% if (editing) { %><%= instrument.description %><% } %></textarea>
                </div>
                <div class="form-group">
                    <label for="videoId">VideoId</label>
                    <input type="text" class="form-control" id="videoId" name="videoId" value="<% if (editing) { %><%= instrument.videoId %><% } %>">
                </div>
                <div class="form-group">
                    <label for="imageUrl">Image URL</label>
                    <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="<% if (editing) { %><%= instrument.imageUrl %><% } %>">
                </div>
                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="<% if (editing) { %><%= instrument.genre %><% } %>">
                </div>
                <% if (editing) { %>
                    <input type="hidden" value="<%= instrument.id %>" name="instrumentId">
                <% } %>


                <button type="submit" class="btn btn-primary"><% if (editing) { %>Update Instrument<% } else { %>Add Instrument<% } %></button>

            </form>
        </div>
    </div>
</div>