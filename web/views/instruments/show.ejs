<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Creator:</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                             <%= instrument.user.email %>
                            </li>
                        </ul>
                        <h4 class="card-title">Genre:</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                             <%= instrument.genre %>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title"><%= instrument.title %></h2>
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= instrument.videoId %>" allowfullscreen></iframe>
                        </div>
                        <h4 class="card-title">Description</h4>
                        <p class="card-text mt-3"><%= instrument.description %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    
</body>
