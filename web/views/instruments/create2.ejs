<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">

<div class="mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>REVIEW</h3>

            <form action="/admin/approve/<%= instrument.id %>" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%= instrument.title %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3"><%= instrument.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="videoId">VideoId</label>
                    <input type="text" class="form-control" id="videoId" name="videoId" value="<%= instrument.videoId %>">
                </div>
                <div class="form-group">
                    <label for="imageUrl">Image URL</label>
                    <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="<%= instrument.imageUrl %>">
                </div>
                <div class="form-group">
                    <label for="genre">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre" value="<% if (editing) { %><%= instrument.genre %><% } %>">
                </div>

                <!-- Thêm các thông tin khác bạn muốn hiển thị -->

                <button type="submit" class="btn btn-success">Approve</button>
            </form>

            <form action="/admin/reject/<%= instrument.id %>" method="post">
                <button type="submit" class="btn btn-danger">Reject</button>
            </form>
        </div>
    </div>
</div>
