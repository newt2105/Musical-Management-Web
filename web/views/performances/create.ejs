<!-- create-performance.ejs -->

<form action="/admin/create-performance" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name = "title">
  </div>
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" required>
  
    <label for="location">Location:</label>
    <input type="text" id="location" name="location" required>

    <label for="videoId">VideoId</label>
    <input type="text" class="form-control" id="videoId" name = "videoId" >

    <label for="imageUrl">imageUrl</label>
    <input type="text" class="form-control" id="imageUrl" name = "imageUrl" >
  

  
    <!-- Đổi thành checkboxes để chọn nhiều nhạc cụ -->
    <label>Choose Instruments:</label>
    <% instruments.forEach(instrument => { %>
      <input type="checkbox" name="instrumentNames" value="<%= instrument.title %>">
      <%= instrument.title %><br>
    <% }); %>
  
    <button type="submit">Create Performance</button>
  </form>
  